<%- include("header") -%>
    <div class="container">
        <div class="row">
            <div class="column">
                <div class="sidebar">
                    <form class="item" action="/weather" method="post">
                        <input type="text" name="cityName" placeholder="City Name" autocomplete="off">
                        <button class="weather-button" type="submit">&#128269;</button>
                    </form>
                    <div class="box_item">
                        <p> The current weather in <%=city%> is

                        </p>
                        <p>
                            <%= weatherDay %>
                        </p>
                        <p>and temperature <%= temperature %>
                        </p>

                    </div>
                </div>
            </div>
            <div class="column">
                <div class="box-heading " id="heading">
                    <h1>
                        <%= listTitle %>
                    </h1>
                </div>

                <div class="box">
                    <div class="item_container">
                        <% newListItems.forEach((item)=>{ %>
                            <form action="/delete" method="post">
                                <div class="box_item">
                                    <input type="checkbox" name="checkedbox" onchange="this.form.submit()"
                                        value="<%= item.id %>">
                                    <p>
                                        <%= item.name %>
                                    </p>

                                </div>
                                <input type="hidden" name="listName" value="<%= listTitle %>"></input>
                            </form>

                            <% }) %>
                    </div>

                    <form class="item" action="/" method="post">
                        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                        <button class="submit-button" type="submit" name="list" value="<%= listTitle %>">+</button>
                    </form>
                </div>
            </div>

        </div>
    </div>

    <%- include("footer") -%>